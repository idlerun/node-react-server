{
  "name": "node-react-server",
  "main": "index.js",
  "description": "Example NodeJS server with WebPack and ReactJS",
  "repository": "https://github.com/idlerun/node-react-server",
  "license": "BSD-2-Clause",
  "author": "Idle Run",

  "engines": {
    "node": ">=4.3.2"
  },

  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },

  "scripts": {
    "dev": "NODE_ENV=development node .",
    "start": "node .",
    "build": "rm -rf dist && NODE_ENV=production webpack --config ./webpack.production.config.js --progress --profile",
    "postinstall": "npm run build"
  },

  "dependencies": {
    "babel-core": "6.23.1",
    "babel-loader": "6.3.2",
    "babel-plugin-transform-class-properties": "6.23.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.23.0",
    "babel-register": "6.23.0",
    "babel-runtime": "6.23.0",
    "body-parser": "1.16.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.26.1",
    "express": "4.14.1",
    "fs": "0.0.2",
    "html-webpack-plugin": "2.28.0",
    "jquery": "3.1.1",
    "jsonwebtoken": "7.3.0",
    "lodash": "4.17.4",
    "log-timestamp": "0.1.2",
    "morgan": "1.8.1",
    "node-sass": "4.5.0",
    "normalize.css": "5.0.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "sass-loader": "6.0.2",
    "style-loader": "0.13.1",
    "webpack": "2.2.1"
  },
  
  "devDependencies": {
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.0"
  }
}
