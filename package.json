{
  "name": "node-react-server",
  "main": "index.js",
  "description": "Example NodeJS server with WebPack and ReactJS",
  "repository": "https://github.com/idlerun/node-react-server",
  "license": "BSD",

  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },

  "scripts": {
    "dev": "NODE_ENV=development node .",
    "start": "node .",
    "build": "rm -rf dist && NODE_ENV=production webpack --config ./webpack.production.config.js --progress --profile"
  },

  "dependencies": {
    "babel-core": "6.9.1",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-class-properties": "6.9.1",
    "babel-plugin-transform-runtime": "6.9.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babel-register": "6.9.0",
    "babel-runtime": "6.9.2",
    "body-parser": "1.15.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.26.1",
    "express": "4.13.4",
    "fs": "0.0.2",
    "html-webpack-plugin": "2.19.0",
    "jsonwebtoken": "7.0.0",
    "lodash": "4.13.1",
    "log-timestamp": "0.1.2",
    "morgan": "1.7.0",
    "node-sass": "3.7.0",
    "normalize.css": "5.0.0",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "sass-loader": "4.0.2",
    "style-loader": "0.13.1",
    "webpack": "2.1.0-beta"
  },
  "devDependencies": {
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.10.0"
  }
}
